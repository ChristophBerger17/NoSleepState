<Window x:Class="NoSleepState.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="NoSleepState">
    <StackPanel Margin="10,10" Orientation="Horizontal">
        <Button Content="Hide Window" Margin="10" Click="ButtonHide_Click" Width="120" Height="30"/>
        <Button Content="Exit NoSleepState" Margin="10"  Click="ButtonExit_Click" Width="120" Height="30"/>
    </StackPanel>
</Window>
